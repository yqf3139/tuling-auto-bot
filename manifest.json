{
    "manifest_version": 2,
    "name": "Tuling Auto Bot",
    "version": "0.1",
    "description": "To make Tuling bot living in chrome",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "background",
        "webNavigation",
        "notifications",
        "http://localhost/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
      {
      "matches": ["*://*/*"],
      "js": ["bot.js","content.js"]
      }
    ],
    "web_accessible_resources": [
        "views/*.html",
        "views/*.css",
        "imgs/*",
        "*.js"
    ]
}
